{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer"
            },
            "template": {
                "type": "object",
                "properties": {
                    "kind": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "slot": {
                        "type": "integer"
                    }
                },
                "required": [
                    "kind",
                    "name",
                    "slot"
                ]
            }
        },
        "required": [
            "id",
            "template"
        ]
    }
}
