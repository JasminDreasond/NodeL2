{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "classId": {
                "type": "integer"
            },
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        },
                        "name": {
                            "type": "string"
                        },
                        "amount": {
                            "type": "integer"
                        },
                        "equipped": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "id",
                        "name",
                        "amount",
                        "equipped"
                    ]
                }
            }
        },
        "required": [
            "classId",
            "items"
        ]
    }
}
