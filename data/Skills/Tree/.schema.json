{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "classId": {
                "type": "integer"
            },
            "skills": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        },
                        "name": {
                            "type": "string"
                        },
                        "level": {
                            "type": "integer"
                        },
                        "pLevel": {
                            "type": "integer"
                        }
                    },
                    "required": [
                        "id",
                        "name",
                        "level",
                        "pLevel"
                    ]
                }
            }
        },
        "required": [
            "classId",
            "skills"
        ]
    }
}
